<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_bar">



    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/telephone_icon"
        android:id="@+id/imagePhone"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonX"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:background="?attr/actionModeSplitBackground"
        android:backgroundTint="?attr/actionModeSplitBackground"
        android:onClick="process"
        android:text="3342981951"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:layout_below="@+id/imagePhone"
        android:layout_alignLeft="@+id/imagePhone"
        android:layout_alignStart="@+id/imagePhone" />

    <Button
        android:id="@+id/buttonJ"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/buttonX"
        android:layout_alignStart="@+id/buttonX"
        android:layout_below="@+id/buttonX"
        android:layout_marginTop="27dp"
        android:background="?attr/actionModeSplitBackground"
        android:backgroundTint="?attr/actionModeSplitBackground"
        android:onClick="process"
        android:text="3487867623"
        android:textColor="@color/com_facebook_button_background_color_focused" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/map_icon"
        android:layout_above="@+id/buttonGPS"
        android:layout_alignLeft="@+id/buttonJ"
        android:layout_alignStart="@+id/buttonJ"
        android:id="@+id/imageView2" />

    <Button
        android:id="@+id/buttonGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="135dp"
        android:background="?attr/actionModeSplitBackground"
        android:backgroundTint="?attr/actionModeSplitBackground"
        android:onClick="process"
        android:text="GPS INDICATIONS"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />


</RelativeLayout>